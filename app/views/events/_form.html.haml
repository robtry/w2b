= form_for @event do |f|
	- if @event.errors.any?
		#error_explanation
			%h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
			%ul
				- @event.errors.full_messages.each do |message|
					%li= message

	.field
		= f.label :nombre
		= f.text_field :nombre
	.field
		= f.label :descripcion
		= f.text_area :descripcion
	.field
		= f.label :items
		= f.text_field :items
	.actions
		= f.submit 'Save'
