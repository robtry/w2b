%h1 Listing items

%table
  %thead
    %tr
      %th Numero
      %th Descripcion
      %th Event
      %th Assignment
      %th
      %th
      %th

  %tbody
    - @items.each do |item|
      %tr
        %td= item.numero
        %td= item.descripcion
        %td= item.event
        %td= item.assignment
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
